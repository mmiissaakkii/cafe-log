<!--管理者側の会員詳細ページ-->
<div class="container">
  <div class="row">
    <div class="col-md-11 mx-auto border mt-5">
      <h5 class="p-4 mb-0 ml-5 font-weight-bold">User page</h5>
      <div class="row p-4 mb-0 ml-5">
        <%= image_tag @customer.get_profile_image(100,100), class:"mt-3"; %>
        <div class="d-flex align-items-center ml-3"><%= @customer.name %></div>
        <div class="d-flex align-items-center ml-3"><%= link_to '編集', edit_admin_customer_path(@customer.id), method: :get %></div>
      </div>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">レビュー画像</th>
            <th scope="col">タグ</th>
            <th scope="col">名前</th>
          </tr>
        </thead>
        <tbody>
          <% @reviews.each do |review| %>
          <tr>
            <td>
              <% if review.image.attached? %>
              <%= link_to admin_review_path(review.id) do %>
                <%= image_tag review.image, size: "200x200", class:"img-fluid"; %>
              <% end %>
              <% end %>
            </td>
            <td>
              <% review.tags.each do |tag| %>
                <span>#<%= tag.name %></span>
              <% end %>
            </td>
            <td><%= review.customer.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <% #link_to "編集", edit_review_path(review), class: "btn btn-success" %>
    </div>
  </div>
</div>
