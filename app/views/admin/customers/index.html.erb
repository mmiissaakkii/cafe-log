<div class="row">
<div class="col-8 ml-5 mb-3">
  <h5 class="gray ml-5">会員一覧</h5>
</div>
</div>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col" width="15%">会員ID</th>
      <th scope="col" width="40%">氏名</th>
      <th scope="col" width="45%">メールアドレス</th>
    </tr>
  </thead>

  <tbody>
      <% @customers.each do |customer|%>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to customer.name, admin_customer_path(customer.id) %></td>
        <td><%= customer.email %></td>
      </tr>
      <% end %>
  </tbody>
</table>
