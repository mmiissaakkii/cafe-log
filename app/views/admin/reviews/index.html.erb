<div class="container">
  <div class="row">
    <div class="mx-auto col-10">
      <h4>レビュー一覧</h4>
    <% @reviews.each do |review| %>
      <div class="img-fluid" alt="Responsive image"><%= image_tag review.image, class:"col-3" %></div>
      <div><%= review.store_name %></div>
      <div>
        <% review.tags.each do |tag| %>
          <span>#<%= tag.name %></span>
        <% end %>
      </div>
      <div><%= review.customer.name %></div>
      <% end %>
    </div>
  </div>
</div>