<!--管理者側レビュー編集-->
<div class="p-md-5 mx-md-3 mx-md-auto">
  <div class="row">
    <div class="col-md-11 mx-auto rounded border">
      <div class="form-body p-4 col-8 mx-auto">
        <h5 class="mb-0">Review Editing</h5>
        <%=form_with model: @review, url: admin_review_path, method: :patch do |f| %>
        <div class="input-group mb-3 mt-4">
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        <div class="input-group mb-3 mt-4">
          <%= f.text_area :body, class:"form-control", rows:"3", placeholder:"本文" %>
        </div>
        <div class="input-group mb-3 mt-4">
        <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
          <div class='form-check'>
            <%= tag.label class: 'form-check-label' do %>
              <%= tag.check_box class: 'form-check-input' %>
              <%= tag.text %>
            <% end %>
          </div>
        <% end %>
        </div>
        <div class="input-group mb-3 mt-4">
          <%= f.text_field :store_name, class:"form-control", placeholder:"ショップ名" %>
        </div>
        <div class="input-group mb-3 mt-4">
          <%= f.text_field :price, class:"form-control", placeholder:"価格" %>
        </div>
        <div class="input-group mb-3 mt-4">
          <%= f.text_field :address, class:"form-control", placeholder:"住所" %>
        </div>
        <hr>
        <div class="pb-3">
        <%= f.submit '編集', class:"btn btn-info mt-4" %>
        <%= link_to "削除", admin_review_path(@review.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger mt-4" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>