<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">
    <% reviews.each do |review| %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <%= link_to review_path(review.id) do %>
            <%= image_tag review.image, class:"card-img-top"; %>
          <% end %>
          <div class="card-body">
            <p class="card-text favorite-btn col-8">
              <%= render 'public/favorites/favorite-btn', review: review %>
            </p>
            <p class="card-text">
              <%= review.body %>
            </p>
            <p class="card-text">
              <% review.tags.each do |tag| %>
                <span>#<%= tag.name %></span>
              <% end %>
            </p>
            <% if review.customer == current_customer %>
              <% link_to "編集", edit_review_path(review), class: "btn btn-success" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>
