<div class="container">
  <div class="row">
    <div class="col-lg-11">
      <h5 class="p-4 mb-0 ml-5 font-weight-bold">User Page</h5>
      <div class="row p-4 mb-0" style="background-color: #EEEEEE	;">
        <%= image_tag @customer.get_profile_image(100,100), class:"mt-3"; %>
        <div class="d-flex align-items-center ml-3"><%= @customer.name %></div>
        <div class="d-flex align-items-center ml-3"><%= link_to '編集', edit_customer_path(@customer.id), method: :get %></div>
      </div>
      <div class="album py-5">
        <div class="container">
          <div class="row">
          <% @reviews.each do |review| %>
            <div class="col-md-4">
              <div class="card mb-4">
                <%= link_to review_path(review.id) do %>
                  <%= image_tag review.image, class:"card-img-top img-fluid" %>
                <% end %>
                <div class="card-body">
                  <div class="card-text favorite-btn" id="favorite-btn_<%= review.id %>">
                    <%= render 'public/favorites/favorite-btn', review: review %>
                  </div>
                  <p class="card-text">
                    <%= review.store_name %>
                  </p>
                  <p class="card-text">
                    <% review.tags.each do |tag| %>
                      <span>#<%= tag.name %></span>
                    <% end %>
                  </p>
                  <% if review.customer == current_customer %>
                    <% link_to "編集", edit_review_path(review), class: "btn btn-success" %>
                  <% end %>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="justify-content-end">
        <%= link_to "いいねした投稿>>", favorite_customer_path(current_customer.id) %>
      </div>
    </div>
  </div>
</div>