<div class="container">
  <div class="row no-gutters">
    <div class="col-md-10 mx-auto shadow-lg rounded px-0 my-5">
      <h5 class="p-4 mb-0 ml-5 font-weight-bold">User Page</h5>
      <div class="row p-4 mb-0 ml-5">
        <%= image_tag @customer.get_profile_image(100,100), class:"mt-3 profile-image"; %>
        <div class="d-flex align-items-center ml-3"><%= @customer.name %></div>
        <div class="d-flex align-items-center ml-3"><%= link_to '編集', edit_customer_path(@customer.id), method: :get %></div>
      </div>
      <div class="album py-5 bg-light">
      <div class="container">
        <div class="row">
        <% @reviews.each do |review| %>
          <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
              <%= link_to review_path(review.id) do %>
                <%= image_tag review.image, class:"card-img-top"; %>
              <% end %>
              <div class="card-body">
                <div class="card-text favorite-btn" id="favorite-btn_<%= review.id %>">
                  <%= render 'public/favorites/favorite-btn', review: review %>
                </div>
                <p class="card-text">
                  <%= review.body %>
                </p>
                <p class="card-text">
                  <% review.tags.each do |tag| %>
                    <span>#<%= tag.name %></span>
                  <% end %>
                </p>
                <% if review.customer == current_customer %>
                  <% link_to "編集", edit_review_path(review), class: "btn btn-success" %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
        </div>
      </div>
    </div>
    <div>
      <%= link_to "いいねした投稿", favorite_customer_path(current_customer.id), class:"text-decoration-none " %>
    </div>
    </div>
  </div>
</div>