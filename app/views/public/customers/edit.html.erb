<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="bg-light">Profile Editing</h5>
      <%= form_with model: @customer, url: customer_path, method: :patch do |f| %>
      <div class="input-group mb-3 mt-4">
        <%= f.text_field :name, class:"form-control" %>
      </div>
      <div class="input-group mb-3 mt-4">
        <%= f.file_field :image, accept: "image/*", class: "w-100" %>
      </div>
    </div>
  </div>
</div>