<table>
  <% reviews.comments.each do |review_comment| %>
  <tr>
    <td>
    <%= image_tag review_comment.customer.get_profile_image(80,80) %><br>
    <%#=link_to user_path(books.user.id) do %><%= review_comment.customer.name %><%# end %>
    </td>
    <td><%= review_comment.comment %></td>
    <% if review_comment.customer == current_customer %>
    <td><%= link_to "Destroy", review_comment_path(review_comment.review, review_comment), method: :delete,remote: true,class:"btn btn-danger" %></td>
    <% end %>
  </tr>
  <% end %>
 </table>

 <div class="form-group">
  <label for="newcomment">Comment</label>
 <%= form_with(model:[reviews, comments], local: true) do |f| %>
  <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに",class:"form-control" %>
  <%= f.submit "送信する" %>
 <% end %>
 </div>