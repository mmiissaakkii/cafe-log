<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">New Review</h5>
      <%=form_with model: @review, url: public_reviews_path, method: :post do |f| %>
        <%= f.file_field :image, accept: "image/*", class: "w-100" %>
        <%= f.text_area :caption, class:"form-control", rows:"3", placeholder:"コメントここに" %>
        <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-building"></i></span>
            </div>
            <%= f.text_field :store_name, class:"form-control", placeholder:"ショップ名" %>
        </div>
        <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-building"></i></span>
            </div>
            <%= f.text_field :price, class:"form-control", placeholder:"価格" %>
         </div>
         <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-building"></i></span>
            </div>
            <%= f.text_field :address, class:"form-control", placeholder:"住所" %>
        </div>
        <hr>
        <%= f.submit '投稿', class:"btn btn-lg btn-block btn-info mt-4" %>
      <% end %>
    </div>
  </div>
</div>