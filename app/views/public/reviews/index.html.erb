<div class="card-list-containar py-5">
  <% @reviews.each do |review| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">

    <div class="card-header">
      <%= link_to customer_path(review.customer.id) do %>
        <%= image_tag review.customer.get_profile_image(80,80), class:"mt-3 rounded-circle";  %>
        <%= review.customer.name %>
      <% end %>
    </div>

    <%= link_to review_path(review.id) do %>
      <%= image_tag review.image, class:"card-image-top"; %>
    <% end %>

    <div class="card-body">
      <!--favorite-->
      <p class="card-text"><%= review.body %></p>
      <!--tag-->
    </div>
    <% end %>
    <!--paginate-->
  </div>
</div>