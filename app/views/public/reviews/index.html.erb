<div class="post-detail py-5 bg-light">
  <% @reviews.each do |review| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">

    <div class="col-8 mx-2 mx-auto">
      <div class="card-title row mt-3">
        <%= link_to customer_path(review.customer.id) do %>
          <%= image_tag review.customer.get_profile_image(80,80), class:"w-15 rounded-circle mt-3"; %>
        <strong class="mt-5 ml-4"><%= review.customer.name %></strong>
        <% end %>
      </div>
    </div>

    <%= link_to review_path(review.id) do %>
      <%= image_tag review.image, class:"card-img-top col-8 mx-2 mx-auto"; %>
    <% end %>

    <div class="card-body">
      <p class="card-text favorite-btn">
        <%= render 'public/favorites/favorite-btn', review: review %>
      </p>
      <p class="card-text">
        <%= review.body %>
      </p>
      <p class="card-text">
        <% review.tags.each do |tag| %>
          <span>#<%= tag.name %></span>
        <% end %>
      </p>
    </div>
  </div>
  <% end %>
  <!--paginate-->
</div>