<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="bg-light">Review</h5>
      <table>
        <tr>
          <td><%= image_tag @review.user.get_profile_image(80,80), class:"mt-3 rounded-circle";  %></td>
          <td><%= @review.user.name %></td>
        </tr>
        <tr>
          <td><%= image_tag @review.imege(500,500) %></td>
        </tr>
        <tr>
          <td><!--favorite--></td>
        </tr>
        <tr>
          <td><%= @review.body %></td>
        </tr>
        <tr>
          <td><!--tag--></td>
        </tr>
        <tr>
          <th>price</th>
          <td><%= @review.price %></td>
        </tr>
        <tr>
          <th>address</th>
          <td><%= @review.address %></td>
        </tr>
        <tr>
          <td><!--edit link--></td>
        </tr>
      </table>
    </div>
  </div>
</div>