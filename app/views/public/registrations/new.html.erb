<div class="container">
  <div class="row no-gutters">
    <div class="col-md-8 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <div class="bg-light">
        <h5 class="p-4 mb-0 ml-5 font-weight-bold">新規会員登録</h5>
      </div>
      <div class="form-body p-4 col-8 mx-auto">
      <%= form_with model: @customer, url: registration_path(resource_name) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :name %><br>
          <%= f.text_field :name %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
           <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions my-3"><%= f.submit "Sign up" %></div>
      <% end %>

      <%= render "public/shared/links", class:"my-3" %>
      </div>
    </div>
  </div>
</div>